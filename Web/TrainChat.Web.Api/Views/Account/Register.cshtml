@using TrainChat.Web.Api.Localization
@model TrainChat.Web.Api.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@Pages.PleaseSignIn</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label(Pages.Login, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @id = "login" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(Pages.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
                    function checkFields() {
                        var login = document.getElementById("login").value;
                        localStorage.setItem("login", login);
                        var password = document.getElementById("password").value;
                        if (!login || !password) {
                            alert('Not Registered');
                            return false;
                        }
                        return true;
                    }
</script>
}


