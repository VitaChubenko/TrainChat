@{
    ViewBag.Title = "Auth";
}

<h2>ChatAuth</h2>

@using (Html.BeginForm("Chat", "Chat"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please sign in!</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger", @id = "login"})
        <div class="form-group">
            @Html.Label("Login", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Login", null, new { @class = "form-control"})
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Password", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("Password", null, new {@class = "form-control", @id = "password"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sign in" class="btn btn-default" onclick="return checkFields()" />
                <script>
                    function checkFields() {
                        var login = document.getElementById("Login").value;
                        var password = document.getElementById("password").value;
                        if (!login || !password) {
                            alert("You are not registered");
                            return false;
                        }
                        return true;
                    }
                </script>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "User")
</div>
<input type="submit" value="Sign in" class="btn btn-default" onclick="return checkFields()" />
